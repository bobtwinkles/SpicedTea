package tk.sirtwinkles.spicedtea.sys.combat;

import tk.sirtwinkles.spicedtea.entities.Entity;

public class Attack {
	Entity instigator;
	Entity target;
	
	public Attack(Entity instigator, Entity target) {
		if (instigator.getComponent("xp") == null || instigator.getComponent("health" == null)) {
			throw new IllegalArgumentException("Instigator did not have an XP component.");
		}
		
		this.instigator = instigator;
		this.target = target;
	}
}
